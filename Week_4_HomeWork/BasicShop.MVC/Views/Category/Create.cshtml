@model CreateViewModel

<h2>Kategori Oluştur</h2>

<form asp-controller="Category" asp-action="Create" method="post">
    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input  class="form-control" asp-for="Name"  placeholder="Kategori Adı">
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label"></label>
        <input class="form-control" asp-for="Description" placeholder="Kategori Açıklaması">
    </div>
    
    <button type="submit" class="btn btn-primary">Kaydet</button>

</form>