@{
}
@model IEnumerable<ListViewModel>

<h1>Kategori Listesi</h1>

<div class="d-grid gap-2 d-md-flex justify-content-md-end">
    <button class="btn btn-primary me-md-2" type="button">Yeni Kategori</button>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Kategori Adı</th>
            <th scope="col">Kategori Açıklaması</th>
            <th scope="col">Aksiyon</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.Description</td>
            <td>
                <button type="button" class="btn btn-outline-warning" asp-route-id="@item.Id">Düzenle</button>
                <button type="button" class="btn btn-outline-danger" asp-route-id="@item.Id">Sil</button>
                
            </td>
        </tr>  
        }
      
    
    </tbody>
</table>